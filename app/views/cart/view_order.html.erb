
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="well">
        <h2>My Cart</h2>
        <% if @line_items.any? %>
        <table class="table table-hover table-bordered">
          <thead>
            <tr>
              <th>Product </th>
              <th>Quantity </th>
              <th>Price </th>
              <th>Subtotal </th>
              <th class="colspan-2"></th>
            </tr>
          </thead>
          <tbody>
            <% @line_items.each do |line_item| %>
            <tr>
              <td><%= line_item.product.name %></td>
              <td><%= line_item.quantity %></td>
              <td><%= number_to_currency line_item.product.price %></td>
              <td><%= number_to_currency line_item.line_item_total %></td>
              <td>
               <%= form_tag line_item_update_path do %>
               <%= hidden_field_tag :line_item_id, line_item.id %>
               <%= number_field_tag :quantity, line_item.quantity %>
               <%= submit_tag 'Change Quantity', class: 'btn btn-warning' %>
               <% end %>
              </td>
              <td>
              <%= link_to 'Remove Line Item', line_item_destroy_path(line_item_id: line_item.id), class: 'btn btn-danger', data: {confirm: 'Are you sure?'}, method: :delete %>
              <% end %>
              </td>
            </tr>
          </tbody>
          <tfoot>
              <td><%= link_to "Proceed to Checkout?", checkout_path, class: "btn btn-success" %>
              
              </td>
              <td class="colspan-3"></td>
          </tfoot>
        </table>
        
      </div>
      
    </div>
    
  </div>
</div>
<% else %>
<div>
  <p>Your cart appears to be empty.</p>
</div>
<% end %> 
  





